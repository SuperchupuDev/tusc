{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],

    "module": "esnext",
    "moduleResolution": "nodenext",
    "baseUrl": "src",
    "resolveJsonModule": true,

    "pretty": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
